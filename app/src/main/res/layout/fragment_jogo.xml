<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unicamp.ruiter.genius.JogoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/green_block"
            android:layout_width="@dimen/color_block_width"
            android:layout_height="@dimen/color_block_height"
            android:layout_margin="12dp"
            android:background="@color/greem"
            app:layout_constraintRight_toLeftOf="@id/guideline_vertical"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"/>

        <ImageView
            android:id="@+id/red_block"
            android:layout_width="@dimen/color_block_width"
            android:layout_height="@dimen/color_block_height"
            android:layout_margin="12dp"
            android:background="@color/red"
            app:layout_constraintLeft_toRightOf="@id/guideline_vertical"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_horizontal"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_vertical"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <ImageView
            android:id="@+id/yellow_block"
            android:layout_width="@dimen/color_block_width"
            android:layout_height="@dimen/color_block_height"
            android:layout_margin="12dp"
            android:background="@color/yellow"
            app:layout_constraintRight_toLeftOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"/>

        <ImageView
            android:id="@+id/blue_block"
            android:layout_width="@dimen/color_block_width"
            android:layout_height="@dimen/color_block_height"
            android:layout_margin="12dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toRightOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
